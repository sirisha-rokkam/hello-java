pipeline {
    agent any

    environment {
        IMAGE = "helloapp"
        DOCKER_USER = "your-dockerhub-username"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/sirisha-rokkam/hello-java.git'
            }
        }

        stage('Maven Build') {
            steps {
                sh "mvn clean package"
            }
        }

        stage('Docker Build') {
            steps {
                sh "docker build -t ${DOCKER_USER}/${IMAGE}:latest ."
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'USER',
                    passwordVariable: 'PASS'
                )]) {
                    sh "echo ${PASS} | docker login -u ${USER} --password-stdin"
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh "docker push ${DOCKER_USER}/${IMAGE}:latest"
            }
        }

        stage('Deploy Container') {
            steps {
                sh """
                    docker stop helloapp || true
                    docker rm helloapp || true
                    docker run -d -p 8080:8080 --name helloapp ${DOCKER_USER}/${IMAGE}:latest
                """
            }
        }
    }

    post {
        success {
            echo "Application deployed successfully! üöÄ"
        }
        failure {
            echo "Pipeline failed ‚ùå"
        }
    }
}
